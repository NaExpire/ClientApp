<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layUserInfo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.capstone.naexpire.naexpireclient.ActivityRegUserInfo"
    android:focusable="true"
    android:focusableInTouchMode="true">



    <VideoView
        android:id="@+id/splashVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:foregroundGravity="center"/>

    <TextView
        android:id="@+id/registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Registration"
        android:fontFamily="sans-serif-medium"
        android:textSize="25dp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/txtRegUserFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/registration"
        android:hint="First Name"
        android:inputType="textCapWords"
        android:backgroundTint="#fff"
        android:fontFamily="sans-serif-medium"
        android:textColor="#fff"
        android:textColorHint="#fff"/>

    <EditText
        android:id="@+id/txtRegUserLast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/txtRegUserFirst"
        android:hint="Last Name"
        android:inputType="textCapWords"
        android:backgroundTint="#fff"
        android:fontFamily="sans-serif-medium"
        android:textColor="#fff"
        android:textColorHint="#fff"/>

    <EditText
        android:id="@+id/txtRegUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/txtRegUserLast"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:backgroundTint="#fff"
        android:fontFamily="sans-serif-medium"
        android:textColor="#fff"
        android:textColorHint="#fff"/>

    <EditText
        android:id="@+id/txtRegUserPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/txtRegUserEmail"
        android:hint="Password"
        android:inputType="textPassword"
        android:backgroundTint="#fff"
        android:fontFamily="sans-serif-medium"
        android:textColor="#fff"
        android:textColorHint="#fff"/>

    <EditText
        android:id="@+id/txtRegUserPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/txtRegUserPassword"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:backgroundTint="#fff"
        android:fontFamily="sans-serif-medium"
        android:textColor="#fff"
        android:textColorHint="#fff"/>

    <Button
        android:id="@+id/btnRegUserSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/txtRegUserPassword2"
        android:onClick="clickSubmit"
        android:text="Submit"
        android:textColor="#fff"
        android:background="@color/colorPrimary"/>

</RelativeLayout>
